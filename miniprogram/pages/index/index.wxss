.home {
  padding-top: 40rpx;
  padding-bottom: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  /* border: 1px red solid; */
  border-bottom: 6rpx #e6e6e6 solid;
} 
.login{
  margin-bottom: 30rpx;
}
.userinfo {
  width: 300rpx;
  border-radius: 50rpx;
  background-color: orange;
}
.image_{
  width: 150rpx;
  height: 150rpx;
  border-radius: 100rpx;
}
.relation image{
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}
.relation{
  width: 100%;
  line-height: 100rpx;
  vertical-align: text-top;
  font-size: 35rpx;
  border-bottom: 6rpx #e6e6e6 solid;
  background-color: #fff;
  position: relative;
}
.relation button{
  background-color: #fff;
  background-image: "../images/微信.png";
  text-align: left;
  text-indent: 70rpx;
}
.text_{
  position: absolute;
  top: 10rpx;
  right: 0rpx;
}
.weixin{
  position: absolute;
  top: 10rpx;
  left: 20rpx;
}
